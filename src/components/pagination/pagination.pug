mixin pagination()
  .pagination
    .pagination__number-pages 
      .pagination__button-prev.js-pagination__button-prev.js-pagination__invisible-element
        .pagination__arrow arrow_back
      .pagination__first-page.js-pagination__first-page.js-pagination__invisible-element 1
      .pagination__three-point.js-pagination__three-point.js-pagination__invisible-element ...
      .pagination__page.js-pagination__page.js-pagination__hover-page 1
      .pagination__page.js-pagination__page 2
      .pagination__page.js-pagination__page 3
      .pagination__three-point.js-pagination__three-point ...
      .pagination__last-page.js-pagination__last-page 15
      .pagination__button-next.js-pagination__button-next
        .pagination__arrow arrow_forward
    .pagination__bottom-text
      span.pagination__count-from-to.js-pagination__count-from-to 1 - 12
      |
      | из
      |
      span.pagination__all-count 100+
      |
      | вариантов аренды