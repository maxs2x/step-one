include ../button/button.pug
include ../text-field/text-field.pug

mixin login()
  form.login 
    h1.login__title Войти 
    .login__email 
      +text-field({id: "email", type: "email", placeholder: "Email"})
    .login__password 
      +text-field({id: "password", type: "password", placeholder: "Пароль"})
    .login__button-login 
      +button(["big", "войти"])
    .login__button-registration 
      p Нет аккаунта на Toxin?
      .login__button-sing-in
        +button(["white", "создать"])