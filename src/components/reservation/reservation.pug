include ../calendar/calendar.pug
include ../list-of-options/list-of-options.pug
include ../button/button.pug

mixin reservation()
  form.container-reservation 
    .reservation__header
      .reservation__room-number
        h3 № 
        h1 888
        p.reseruation__luxury люкс 
      .reservation__room-price
        p
          |
          span.price-per-day 9 990₽
          |
          | в сутки
    .reservation__date-in-out 
      +date-range(['ДД.ММ.ГГГГ', 'ДД.ММ.ГГГГ'])
    .reservation__guests 
      h3 гости
      +list-of-options_with-buttons(['list-of-options_with-buttons', '2', '1', '0', '3 гостя'])
    .reservation__price-calculation       
      .row-with-price
          .row-with-price__description
            p
              span.price-calculation__price-per-day 9 990₽ 
              | х 
              span.price-calculation__quantity-days 4
              | суток
          .row-with-price__numbers    
            p
              span.price-calculation__result 39 960₽
      .row-with-price
        .row-with-price__description
          p Сбор за услуги: скидка 2 179₽
          .reservation__info_about_service i
        .row-with-price__numbers 
          p 0₽
      .row-with-price
        .row-with-price__description
          p Сбор за дополнительные услуги
          .reservation__info_about_service i
        .row-with-price__numbers 
          p 300₽
    .reservation__total 
      h2 Итого
      h2 38 081₽
    .reservation__button-reservation
      +button(['big', 'забронировать'])
      