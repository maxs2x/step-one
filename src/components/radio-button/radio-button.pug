mixin radio-button([text, name, checked])
  label.radio-button-container=text
    if checked == 'checked'
      input.radio-button-container__input(type='radio' checked='checked' name='radio')
      span.radio-button-container__checkmark 
    else 
      input.radio-button-container__input(type='radio' name='radio')
      span.radio-button-container__checkmark 