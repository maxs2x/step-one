include ../dropdown/dropdown.pug

mixin add-del-buttons([quantity])
  .quantity
    .quantity__button.js-quantity__button.quantity__button-minus.js-quantity__button-minus
      svg(viewBox='0 0 20 20')
        line(x1='8' y1='10' x2='12' y2='10')
    input.quantity__input.js-quantity__input(type='text' value=quantity size='2' data-max-count='20')
    .quantity__button.js-quantity__button.quantity__button-plus.js-quantity__button-plus
      svg(viewBox='0 0 20 20')
        line(x1='10' y1='5' x2='10' y2='13')
        line(x1='6' y1='9' x2='14' y2='9')

mixin list-of-options([content, quantity_bedrooms, quantity_beds, quantity_bathrooms, text_placeholder])
  +dropdown([content, text_placeholder])
    ul.list-of-options.js-list-of-options
      li.js-list-of-options__item
        p.uppercase спальни
        +add-del-buttons([quantity_bedrooms])
      li.js-list-of-options__item
        p.uppercase кровати
        +add-del-buttons([quantity_beds])
      li.js-list-of-options__item
        p.uppercase ванные комнаты
        +add-del-buttons([quantity_bathrooms])

mixin list-of-options_with-buttons([content, quantity_adults, quantity_child, quantity_baby, text_placeholder])
  +dropdown([content, text_placeholder])  
    ul.list-of-options_with-buttons.js-list-of-options_with-buttons
      li.js-list-of-options__item
        p.uppercase Взрослые
        +add-del-buttons([quantity_adults])
      li.js-list-of-options__item
        p.uppercase Дети
        +add-del-buttons([quantity_child])
      li.js-list-of-options__item
        p.uppercase Младенцы
        +add-del-buttons([quantity_baby])
      li.list-of-options__bottom-button.js-list-of-options__bottom-button
        .list-of-options__button_clear.js-list-of-options__button_clear
          p.uppercase очистить
        .list-of-options__button_apply.js-list-of-options__button_apply
          p.uppercase применить
        
      
    