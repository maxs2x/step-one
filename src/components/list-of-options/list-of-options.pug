include ../dropdown/dropdown.pug

mixin add-del-buttons([quantity])
  .quantity
    svg.quantity__button.js-quantity__button.quantity__button-minus.js-quantity__button-minus(viewBox='0 0 20 20')
      line(x1='8' y1='10' x2='12' y2='10')
    input.quantity__input.js-quantity__input(type='text' value=quantity size='2' data-max-count='20') 
    svg.quantity__button.js-quantity__button.quantity__button-plus.js-quantity__button-plus(viewBox='0 0 20 20')
      line(x1='10' y1='5' x2='10' y2='13')
      line(x1='6' y1='9' x2='14' y2='9')

mixin list-of-options([content, quantity_bedrooms, quantity_beds, quantity_bathrooms, text_placeholder])
  - var typeList = (content === "list-of-options_with-buttons") ? "list-of-options list-of-options_with-buttons js-list-of-options_with-buttons" : "list-of-options js-list-of-options";
  - var titleRow = (content === "list-of-options_with-buttons") ? {row1: "Взрослые", row2: "Дети", row3: "Младенцы"} : {row1: "спальни", row2: "кровати", row3: "ванные комнаты"};

  +dropdown([content, text_placeholder])
    ul(class= typeList)
      li.list-of-options__item.js-list-of-options__item
        p.list-of-options__title-item= titleRow.row1 
        +add-del-buttons([quantity_bedrooms])
      li.list-of-options__item.js-list-of-options__item
        p.list-of-options__title-item= titleRow.row2
        +add-del-buttons([quantity_beds])
      li.list-of-options__item.js-list-of-options__item
        p.list-of-options__title-item= titleRow.row3
        +add-del-buttons([quantity_bathrooms])
      if content === "list-of-options_with-buttons"
        li.list-of-options__bottom-button.js-list-of-options__bottom-button
          .list-of-options__button_clear.js-list-of-options__button_clear
            p.list-of-options__text-button очистить
          .list-of-options__button_apply.js-list-of-options__button_apply
            p.list-of-options__text-button применить
        
      
    